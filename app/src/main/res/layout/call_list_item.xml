<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:contentDescription="@string/call_direction"
        android:src="@drawable/baseline_call_made_24"
        />

    <TextView
        android:id="@+id/textview_remote_ext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/image_direction"
        android:textStyle="bold"
        tools:hint="Remote side" />

    <TextView
        android:id="@+id/textview_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/image_direction"
        android:layout_below ="@+id/textview_remote_ext"
        android:layout_marginEnd="5dp"
        tools:text="State" />

    <ImageView
        android:id="@+id/secure_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        app:tint="@color/grey"
        android:layout_toStartOf="@+id/progressbar"
        android:contentDescription="@string/call_direction"
        android:src="@drawable/baseline_lock_24"
        />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/menu_button"
        android:layout_marginEnd="5dp"
        android:indeterminateTint="@color/purple_500"
        android:indeterminateOnly="true" />

    <Button
        android:id="@+id/menu_button"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        app:iconPadding="0dp"
        app:iconGravity="textStart"
        app:icon="@drawable/baseline_more_horiz_24"
        />
</RelativeLayout>


