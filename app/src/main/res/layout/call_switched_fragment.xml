<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:id="@+id/name_and_ext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="name_and_ext"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/call_state"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="call_state"
        android:textStyle="bold"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_and_ext" />

    <TextView
        android:id="@+id/account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="account"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/call_state" />

    <TextView
        android:id="@+id/call_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="call_id"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account" />

    <TextView
        android:id="@+id/received_dtmf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="received_dtmf"
        android:visibility="gone"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/call_id" />

    <TextView
        android:id="@+id/call_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green"
        android:textStyle="bold"
        tools:text="duration"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/received_dtmf" />

    <com.siprix.SiprixVideoRenderer
        android:id="@+id/remote_renderer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="-2dp"
        android:visibility="gone"
        />

    <com.siprix.SiprixVideoRenderer
        android:id="@+id/preview_renderer"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:elevation="-1dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <RelativeLayout
        android:id="@+id/transfer_panel"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/call_duration"
        app:layout_constraintBottom_toTopOf="@+id/hangup_button">

        <EditText
            android:id="@+id/transfer_to_ext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/extension_to_transfer"
            android:textSize="18sp"
            android:gravity="center"/>
        <Button
            android:id="@+id/do_transfer_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/transfer_to_ext"
            app:icon="@drawable/baseline_forward_24"
            android:layout_marginEnd="10dp"
            app:iconGravity="textStart"
            app:cornerRadius="20dp"
            app:iconPadding="0dp"/>
        <Button
           android:id="@+id/transfer_panel_close"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
            android:layout_below="@+id/transfer_to_ext"
           android:layout_toEndOf="@+id/do_transfer_btn"
           app:icon="@drawable/baseline_close_24"
           app:iconGravity="textStart"
           app:cornerRadius="20dp"
           app:iconPadding="0dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/transfer_att_panel"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/call_duration"
        app:layout_constraintBottom_toTopOf="@+id/hangup_button">

        <TextView
            android:id="@+id/transfer_to_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/call_to_transfer"
            android:textSize="18sp"
            android:layout_alignStart="@+id/do_transfer_att_btn"
            android:layout_alignEnd="@+id/transfer_att_panel_close"
            />

        <Spinner
            android:id="@+id/transfer_to_call_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_alignStart="@+id/do_transfer_att_btn"
            android:layout_alignEnd="@+id/transfer_att_panel_close"
            android:layout_below="@+id/transfer_to_call"
            style="?android:attr/listSeparatorTextViewStyle"
            />
        <Button
            android:id="@+id/do_transfer_att_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/transfer_to_call_spinner"
            app:icon="@drawable/baseline_forward_24"
            android:layout_marginEnd="10dp"
            app:iconGravity="textStart"
            app:cornerRadius="20dp"
            app:iconPadding="0dp"/>
        <Button
            android:id="@+id/transfer_att_panel_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/transfer_to_call_spinner"
            android:layout_toEndOf="@+id/do_transfer_att_btn"
            app:icon="@drawable/baseline_close_24"
            app:iconGravity="textStart"
            app:cornerRadius="20dp"
            app:iconPadding="0dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/dtmf_panel"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/call_duration"
        app:layout_constraintBottom_toTopOf="@+id/hangup_button">

        <TextView
            tools:text="sent_dtmf"
            android:textSize="16sp"
            android:id="@+id/sent_dtmf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignStart="@+id/dtmf_btn_1"
            android:layout_alignEnd="@+id/dtmf_btn_3"
            />
        <Button
            android:text="1"
            android:textSize="20sp"
            android:id="@+id/dtmf_btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_below ="@+id/sent_dtmf"
            app:cornerRadius="20dp"/>
        <Button
            android:text="2"
            android:textSize="20sp"
            android:id="@+id/dtmf_btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/dtmf_btn_1"
            android:layout_below ="@+id/sent_dtmf"
            app:cornerRadius="20dp"/>
        <Button
            android:text="3"
            android:textSize="20sp"
            android:id="@+id/dtmf_btn_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/dtmf_btn_2"
            android:layout_below ="@+id/sent_dtmf"
            app:cornerRadius="20dp"/>
        <Button
            android:text="4"
            android:textSize="20sp"
            android:id="@+id/dtmf_btn_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_below ="@+id/dtmf_btn_1"
            app:cornerRadius="20dp"/>
        <Button
            android:text="5"
            android:textSize="20sp"
            android:id="@+id/dtmf_btn_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/dtmf_btn_4"
            android:layout_below ="@+id/dtmf_btn_1"
            app:cornerRadius="20dp"/>
        <Button
            android:text="6"
            android:textSize="20sp"
            android:id="@+id/dtmf_btn_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/dtmf_btn_5"
            android:layout_below ="@+id/dtmf_btn_1"
            app:cornerRadius="20dp"/>
        <Button
            android:text="7"
            android:textSize="20sp"
            android:id="@+id/dtmf_btn_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_below ="@+id/dtmf_btn_4"
            app:cornerRadius="20dp"/>
        <Button
            android:text="8"
            android:textSize="20sp"
            android:id="@+id/dtmf_btn_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/dtmf_btn_7"
            android:layout_below ="@+id/dtmf_btn_4"
            app:cornerRadius="20dp"/>
        <Button
            android:text="9"
            android:textSize="20sp"
            android:id="@+id/dtmf_btn_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/dtmf_btn_8"
            android:layout_below ="@+id/dtmf_btn_4"
            app:cornerRadius="20dp"/>
        <Button
            android:text="*"
            android:textSize="20sp"
            android:id="@+id/dtmf_btn_ast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_below ="@+id/dtmf_btn_7"
            app:cornerRadius="20dp"/>
        <Button
            android:text="0"
            android:textSize="20sp"
            android:id="@+id/dtmf_btn_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/dtmf_btn_ast"
            android:layout_below ="@+id/dtmf_btn_7"
            app:cornerRadius="20dp"/>
        <Button
            android:text="#"
            android:textSize="20sp"
            android:id="@+id/dtmf_btn_hash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/dtmf_btn_0"
            android:layout_below ="@+id/dtmf_btn_7"
            app:cornerRadius="20dp"/>
        <Button
            android:id="@+id/dtmf_panel_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dtmf_btn_0"
            android:layout_toEndOf="@+id/dtmf_btn_ast"
            app:icon="@drawable/baseline_close_24"
            app:iconGravity="textStart"
            app:cornerRadius="20dp"
            app:iconPadding="0dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_ctrls_panel"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/call_duration"
        app:layout_constraintBottom_toTopOf="@+id/hangup_button">

        <Button
            android:id="@+id/main_mute_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            app:cornerRadius="20dp"
            app:icon="@drawable/baseline_mic_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            />

        <Button
            android:id="@+id/dtmf_panel_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/main_mute_btn"
            android:layout_marginEnd="10dp"
            app:cornerRadius="20dp"
            app:icon="@drawable/baseline_dialpad_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            />

        <Button
            android:id="@+id/main_speaker_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/dtmf_panel_open"
            app:cornerRadius="20dp"
            app:icon="@drawable/baseline_volume_up_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            />
        <Button
            android:id="@+id/main_add_call_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_mute_btn"
            android:layout_marginEnd="10dp"
            app:cornerRadius="20dp"
            app:icon="@drawable/baseline_add_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            />

        <Button
            android:id="@+id/main_hold_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_mute_btn"
            android:layout_toEndOf="@+id/main_add_call_btn"
            android:layout_marginEnd="10dp"
            app:cornerRadius="20dp"
            app:icon="@drawable/baseline_pause_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            />
        <Button
            android:id="@+id/main_menu_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_mute_btn"
            android:layout_toEndOf="@+id/main_hold_btn"
            app:cornerRadius="20dp"
            app:icon="@drawable/baseline_more_horiz_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/incoming_call_ctrls_panel"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/hangup_button">

    <Button
        android:id="@+id/accept_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:cornerRadius="20dp"
        android:backgroundTint="@color/green"
        app:icon="@drawable/baseline_call_24"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        />

    <Button
        android:id="@+id/reject_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/accept_btn"
        android:layout_marginEnd="10dp"
        app:cornerRadius="20dp"
        android:backgroundTint="@color/red"
        app:icon="@drawable/baseline_call_end_24"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        />
    </RelativeLayout>

    <Button
        android:id="@+id/hangup_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:iconPadding="0dp"
        app:iconGravity="textStart"
        app:cornerRadius="20dp"
        app:iconSize="35dp"
        android:visibility="gone"
        android:backgroundTint="@color/red"
        app:icon="@drawable/baseline_call_end_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>